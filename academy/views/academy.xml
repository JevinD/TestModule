<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data>   
    <!-- explicit list tree view definition -->

    <record model="ir.ui.view" id="academy_list">
      <field name="name">academy.list</field>
      <field name="model">academy.academy</field>
      <field name="arch" type="xml">
        <tree>
          <field name="day"/>
          <field name="description"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- form view defintion -->
    <record model="ir.ui.view" id="academy_form">
      <field name="name">academy.form</field>
      <field name="model">academy.academy</field>
      <field name="arch" type="xml">
        <form string ="math form">
          <sheet>
            <group>
              <field name="day"/>
              <field name="description"/>
              <field name ="value2"/>
            </group>
          </sheet>
          <sheet>
            <field name ="value2"/>
          </sheet>
        </form>
      </field>
    </record>

    <!-- action for tree and form view-->
    <record id="action_academy_academy" model="ir.actions.act_window">
      <field name="name">Academy Main Menu</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">academy.academy</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- actions opening views on models -->

    <!-- ADD SCHOOL VIEW TO SCHOOL-->
    <record id="student_list" model="ir.ui.view" >
      <field name="name">Students</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="age"/>
            <field name="guardian"/>
            <field name="note"/>
            <field name="gender"/>
        </tree>
      </field>
    </record>

    <record id="student_form" model="ir.ui.view" >
      <field name="name">student.form</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
        <form string="student form">
          <sheet>
            <group>
              <field name="name"/>
              <field name="age"/>
              <field name="guardian"/>
              <field name="note"/>
              <field name="gender"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- action-->
    <record id="action_school_student" model="ir.actions.act_window" >
      <field name="name">school window</field>
      <field name="res_model">school.student</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem id="academy_menu_root"
        name="Academy"  
        web_icon ="academy,static/description/icon.png" 
        sequence="0"/>

    <!-- menu categories -->

    <menuitem id="academy_menu_school" 
        name="School" 
        parent="academy_menu_root"/>



    <!-- actions -->
    <menuitem id="academy_menu_student" 
        name="Student"  
        parent="academy_menu_school"
        action="academy.action_school_student"/>

    <menuitem id="academy_menu_major"
        name="Major"  
        parent="academy_menu_school"
        action="academy.action_academy_academy"/>

    <menuitem id="academy_menu_server"
        name="Courses"  
        parent="academy_menu_school"
        action="academy.action_academy_academy"/>


  </data>
</odoo>