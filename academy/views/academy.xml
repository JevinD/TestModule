        <record id="session_form_view" model="ir.ui.view">
            <field name="name">session.form</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <form string="Session Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="seats"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_academy_session">
            <field name="name">Sessions</field>
            <field name="res_model">academy.session</field>
            <field name="view_mode">tree,form</field>
        </record>
    <!-- Top menu item -->

    <menuitem id="academy_menu_root"
        name="Academy"  
        web_icon ="academy,static/description/icon.png" 
        sequence="0"/>

    <!-- menu categories -->

    <menuitem id="academy_menu_school" 
        name="School" 
        parent="academy_menu_root"/>

    <!-- actions -->
    <menuitem id="academy_menu_student" 
        name="Student"  
        parent="academy_menu_school"
        action="academy.action_school_student"/>

    <menuitem id="academy_menu_major"
        name="Major"  
        parent="academy_menu_school"
        action="academy.action_academy_academy"/>

    <menuitem id="academy_menu_server"
        name="Courses"  
        parent="academy_menu_school"
        action="academy.action_academy_academy"/>

    <menuitem id="academy_menu_session" name="Sessions"
        parent="academy_menu_school"
            action="academy.action_academy_session"/>

  </data>
</odoo>