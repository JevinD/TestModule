<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data>   
    <!-- explicit list tree view definition -->

    <record model="ir.ui.view" id="academy_list">
      <field name="name">academy.list</field>
      <field name="model">academy.academy</field>
      <field name="arch" type="xml">
        <tree>
          <field name="create_date"/>
          <field name="day"/>
          <field name="description"/>
          <field name="section"/>
        </tree>
      </field>
    </record>

    <!-- form view defintion -->
    <record model="ir.ui.view" id="academy_form">
      <field name="name">academy.form</field>
      <field name="model">academy.academy</field>
      <field name="arch" type="xml">
        <form string ="Task form">
          <sheet>
            <group>
              <group>
              <field name="day"/>
              <field name="section"/>
              </group>
            </group>
          </sheet>
          <sheet>
            <group>
              <notebook>
                <page string="Description">
                  <field name="description" nolabel="1"/>
                </page>
              </notebook>
              </group>
            </sheet>
            <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
          </div>
        </form>
      </field>
    </record>

    <!-- action for tree and form view-->
    <record id="action_academy_academy" model="ir.actions.act_window">
      <field name="name">Academy.Main.Menu</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">academy.academy</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- actions opening views on models -->

    <!-- ADD SCHOOL VIEW TO SCHOOL-->
    <record id="student_list" model="ir.ui.view" >
      <field name="name">Students</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="age"/>
            <field name="gender"/>
            <field name="guardian"/>
            <field name="allergy"/>
        </tree>
      </field>
    </record>

    <record id="student_form" model="ir.ui.view" >
      <field name="name">student.form</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
        <form string="student form">
          <sheet>
            <group colspan="4">
              <group colspan="2" col="2">
                <seperator string="Student" colspan="2"/>
                  <field name="image" widget='image' class="oe_avatar" options='{"zoom": true}'/>
                  <field name="name"/>
                  <field name="age"/>
                  <field name="gender"/>
              </group>

              <group colspan="2" col="2">
                <seperator string="Parent/Guardian" colspan="2"/>
                  <field name="guardian"/>
                  <field name="allergy"/>
              </group>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
          </div> 
        </form>
      </field>
    </record>

    <!-- action-->
    <record id="action_school_student" model="ir.actions.act_window" >
      <field name="name">Student</field>
      <field name="res_model">school.student</field>
      <field name="view_mode">tree,form</field>
    </record>



  </data>
</odoo>