<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data> 
    <!-- list tree view Academy-->
    <record model="ir.ui.view" id="academy_list">
      <field name="name">academy.list</field>
      <field name="model">academy.academy</field>
      <field name="arch" type="xml">
        <tree>
          <field name="create_date"/>
          <field name="name"/>
          <field name="day"/>
          <field name="description"/>
          <field name="section"/>
        </tree>
      </field>
    </record>

    <!-- form view defintion -->
    <record model="ir.ui.view" id="academy_form">
      <field name="name">academy.form</field>
      <field name="model">academy.academy</field>
      <field name="arch" type="xml">
        <form string ="Task form">
          <sheet>
            <group>
              <group>
              <field name="name"/>
              <field name="day"/>
              <field name="section"/>
              </group>
              <notebook colspan="4">
                <page string="Description">
                  <field name="description" nolabel="1"/>
                </page>
                <page string="Descriptions">
                  <field name="description" nolabel="1"/>
                </page>
              </notebook>
            </group>
          </sheet>
            <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
          </div>
        </form>
      </field>
    </record>

    <!-- action-->
    <record id="action_academy_academy" model="ir.actions.act_window">
      <field name="name">Academy.Academy</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">academy.academy</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          TEST PAGE!
        </p>
      </field>
    </record>

<!--____________________________________STUDENT VIEWS_________________________________-->
    <record id="student_list" model="ir.ui.view" >
      <field name="name">Students</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="age"/>
          <field name="gender"/>
          <field name="guardian"/>
          <field name="allergy"/>
        </tree>
      </field>
    </record>

    <record id="student_form" model="ir.ui.view" >
      <field name="name">student.form</field>
      <field name="model">school.student</field>
      <field name="arch" type="xml">
        <form string="student form">
          <sheet>
            <group colspan="4">
              <group colspan="2" col="2">
                <seperator string="Student" colspan="2"/>
                  <field name="image" widget='image' class="oe_avatar" options='{"zoom": true}'/>
                  <field name="name"/>
                  <field name="age"/>
                  <field name="gender"/>
              </group>

              <group colspan="2" col="2">
                <seperator string="Parent/Guardian" colspan="2"/>
                <field name="guardian"/>
                <field name="allergy"/>
              </group>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity" />
            <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
          </div> 
        </form>
      </field>
    </record>

    <!-- action-->
    <record id="action_school_student" model="ir.actions.act_window" >
      <field name="name">Student</field>
      <field name="res_model">school.student</field>
      <field name="view_mode">tree,form</field>        
      <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create your First Student!
          </p>
        </field>
    </record>
<!--____________________________________MAJOR VIEWS_________________________________-->
    <record id="major_list_view" model="ir.ui.view" >
      <field name="name">Major</field>
      <field name="model">academy.major</field>
      <field name="arch" type="xml">
        <tree>
          <field name="major"/>
          <field name="degreeType"/>
        </tree>
      </field>
    </record>

    <record id="major_form_view" model="ir.ui.view">
      <field name="name">major.form</field>
      <field name="model">academy.major</field>
      <field name="arch" type="xml">
        <form string="Major Form">
          <sheet>
            <group>
              <field name="major"/>
              <field name="degreeType"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_academy_major" model="ir.actions.act_window" >
      <field name="name">Major</field>
      <field name="res_model">academy.major</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add a Major!
        </p>
      </field>
    </record>  
<!--____________________________________Course VIEWS w/ manytoone_________________________________-->

    <record id="course_list_view" model="ir.ui.view" >
      <field name="name">Course</field>
      <field name="model">academy.course</field>
      <field name="arch" type="xml">
        <tree string="Course Tree">
          <field name="name"/>
          <field name="responsible_id"/>
        </tree>
      </field>
    </record>

    <record id="course_form_view" model="ir.ui.view">
      <field name="name">course.form</field>
      <field name="model">academy.course</field>
      <field name="arch" type="xml">
        <form string="Course Form">
          <sheet>
            <notebook>
              <page string="Description">
                <field name="name" />
                <field name="description" string ="description"/>

              </page>
              <page string="Sessions">
                <field name="session_ids">
                  <tree string="Registered sessions">
                    <field name="name"/>
                    <field name="instructor_id"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
        
    <record id="action_academy_course" model="ir.actions.act_window" >
      <field name="name">Course</field>
      <field name="res_model">academy.course</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add your Course!
        </p>
      </field>
    </record>         
<!--____________________________________SESSION VIEWS_________________________________-->
   <record id="session_list_view" model="ir.ui.view" >
    <field name="name">session.tree</field>
    <field name="model">academy.session</field>
    <field name="arch" type="xml">
      <tree string="Session Tree">
        <field name="name"/>
        <field name="course_id"/>
        <field name="taken_seats" widget="progressbar"/>
      </tree>
    </field>
    </record>

    <record id="session_form_view" model="ir.ui.view">
      <field name="name">session</field>
      <field name="model">academy.session</field>
      <field name="arch" type="xml">
        <form string="Session Form">
          <sheet>
            <group>
              <group string="General">
                <field name="course_id"/>
                <field name="name"/>
                <field name="instructor_id"/>
              </group>
              <group string="Schedule">
                <field name="start_date"/>
                <field name="duration"/>
                <field name="seats"/>
                <field name="taken_seats" widget="progressbar"/>

              </group>
            </group>

            <label for="attendee_ids"/>
            <field name="attendee_ids"/>
          </sheet>
        </form>
      </field>
    </record>
          
    <record id="action_academy_session" model="ir.actions.act_window" >
      <field name="name">Sessions</field>
      <field name="res_model">academy.session</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create your Session!
        </p>
      </field>
    </record>
    
  </data>
</odoo>