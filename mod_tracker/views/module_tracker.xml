<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data> 
<!--____________________________________MAJOR VIEWS_________________________________-->
    <record id="module_tracker_tree_view" model="ir.ui.view" >
      <field name="name">module.tracker.tree</field>
      <field name="model">module.tracker</field>
      <field name="arch" type="xml">
        <tree>
          <field name="mod_name"/>
          <field name="module_type"/>
        </tree>
      </field>
    </record>

    <record id="module_tracker_form_view" model="ir.ui.view">
      <field name="name">module.tracker.form</field>
      <field name="model">module.tracker</field>
      <field name="arch" type="xml">
        <form string="Module Information">
          <sheet>
            <group>
              <group>
                <field name="mod_name"/>
                <field name="module_type"/>
                <field name="project_ids" />
                <field name="prim_designer"/>
                <field name="prim_category"/>
                <field name="customer"/>
                </group>
                <group>
                <field name="contributor" widget="many2many_tags"/>
                <field name="repo_url" widget="url"/>
                <field name="rel_date"/>
                <field name="version_sup"/>
                <field name="dependencies"/>
                <field name="special_circum"/>
              </group>
            </group>
            <field name="mod_description" default_focus="2" placeholder="Summary"/>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_module_tracker" model="ir.actions.act_window" >
      <field name="name">module.tracker.action</field>
      <field name="res_model">module.tracker</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add a Module
        </p>
      </field>
    </record>  

<!--________________________________Top menu item____________________________________-->

    <menuitem id="module_tracker_menu_root"
        name="Module Tracker"  
        web_icon ="module_tracker,static/description/icon.png" 
        sequence="0"/>

    <!-- menu categories -->
    <menuitem id="module_tracker_menu" 
        name="Module" 
        parent="module_tracker_menu_root"
        sequence="1"/>

    <!-- sub-menu actions -->

    <menuitem id="module_tracker_submenu"
        name="Module s"  
        parent="module_tracker_menu"
        action="action_module_tracker"
        sequence="1"/>

  </data>
</odoo>